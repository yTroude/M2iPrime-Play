# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Import Secure routes
*       /                                       module:secure

##########
# Public #
##########

# Home page
# GET     /                                       publ.Publ.index

# Inscription

GET     /inscription                            publ.Inscription.formulaireInscription
POST    /inscription/submit                     publ.Inscription.inscription
GET     /inscription/confirm/{utilisateurUuid}/{validationTokenUuid}             publ.Inscription.confirmerInscription

GET     /inscription/resentEmail                publ.Inscription.renvoiEmailActivationDeCompte
POST    /inscription/resentEmail                publ.Inscription.renvoiEmailActivationDeCompte

GET     /lostPassword                           publ.Publ.motDePassePerdu
POST    /lostPassword/submit                    publ.Publ.sendResetPasswordEmail
GET     /lostPassword/defineNewPassword/{passwordResetRequestUuid}/{validationTokenUuid}            publ.Publ.defineNewPassword
POST    /lostPassword/defineNewPassword/submit     publ.Publ.validateNewPassword

######################
# Authentified users #
######################

# Welcome auth users page
GET     /                                       auth.Auth.index
GET     /profil/actif                           auth.ProfilController.choisirProfilActif
GET     /profil/actif/{pseudo}                  auth.ProfilController.changerProfilActif
GET     /profil                                 auth.ProfilController.profils
POST    /profil/modifier                        auth.ProfilController.modifierProfil
GET     /compte                                 auth.Auth.gestionCompte



#########
# Other #
#########

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public


# Catch all (Ignored)
# *       /{controller}/{action}                  {controller}.{action}
