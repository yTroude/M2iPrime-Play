# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

##########
# Public #
##########

# Home page
GET     /                                       publ.Publ.index

# Inscription

GET     /inscription                            publ.Inscription.formulaireInscription
POST    /inscription/submit                     publ.Inscription.inscription

# Connexion

GET     /connexion                              publ.Publ.formulaireConnexion

#Admin
GET     /admin                                  admin.Admin.index
GET     /admin/videos/nouveau                   admin.VideoController.uploadVideo
POST    /admin/videos/nouveau                   admin.VideoController.saveUploadedVideo
GET     /admin/video

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public



# Catch all (Ignored)
# *       /{controller}/{action}                  {controller}.{action}
