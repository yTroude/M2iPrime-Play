# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Import Secure routes
*       /                                       module:secure

##########
# Public #
##########

# Home page
# GET     /                                       publ.Publ.index

# Inscription

GET     /inscription                            publ.Inscription.formulaireInscription
POST    /inscription/submit                     publ.Inscription.inscription
GET     /inscription/confirm/{utilisateurUuid}/{validationTokenUuid}             publ.Inscription.confirmerInscription
GET     /inscription/resentEmail                publ.Inscription.renvoiEmailActivationDeCompte
POST    /inscription/resentEmail                publ.Inscription.renvoiEmailActivationDeCompte

######################
# Authentified users #
######################

# Welcome auth users page
GET     /                                       auth.Auth.index
GET     /inscription/fin                        auth.Inscription.formulaireFinInscription
POST    /inscription/fin                        auth.Inscription.finirInscription

#Contenu

GET     /contenu                                ContenuController.testContenu

#API

GET     /api/videos                             api.ApiController.allVideos
GET     /api/videos/details/{uuid}              api.ApiController.detailsVideo
GET     /api/videos/categorie/{categorie}       api.ApiController.filterByCategorie
GET     /api/videos/{format}                    api.ApiController.filterByFormat
GET     /api/videos/{format}/{categorie}        api.ApiController.filterByFormatAndCategorie
GET     /api/acteurs/details/{uuid}             api.ApiController.detailsActeur



POST    /api/videos/add                         api.ApiController.ajouterVideo
POST    /api/acteurs/add                        api.ApiController.addActeur
POST    /api/videos/addActeur                   api.ApiController.addActeurToVideo
POST    /api/acteurs/addVideo                   api.ApiController.addVideoToActeur


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public


# Catch all (Ignored)
# *       /{controller}/{action}                  {controller}.{action}
