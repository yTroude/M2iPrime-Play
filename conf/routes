# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Import Secure routes
*       /                                       module:secure

##########
# Public #
##########

# Home page
GET     /                                       publ.Publ.index

# Inscription

GET     /inscription                            publ.Inscription.formulaireInscription
POST    /inscription/submit                     publ.Inscription.inscription
GET     /inscription/confirm/{utilisateurUuid}/{validationTokenUuid}             publ.Inscription.confirmerInscription
GET     /inscription/resentEmail                publ.Inscription.resentEmailForValidationToken

######################
# Authentified users #
######################

# Welcome auth users page
GET     /welcome                                auth.Auth.index



# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public


# Catch all (Ignored)
# *       /{controller}/{action}                  {controller}.{action}
